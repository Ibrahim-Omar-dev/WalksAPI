@model Walks.MVC.Models.DTO.RegionDTO


@{
	ViewData["Title"] = "Edit Region";
}
<div class="container mt-5">
 <h2 class="text-bg-primary p-2 rounded text-center">Edit Region</h2>

    <form asp-action="Edit" method="post">
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="RegionImageUrl" class="form-label"></label>
            <input asp-for="RegionImageUrl" class="form-control" />
            <span asp-validation-for="RegionImageUrl" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Save</button>
   <button type="submit" class="btn btn-danger" asp-action="Delete">Delete</button>
        </div>
    </form>
</div>